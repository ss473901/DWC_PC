<!DOCTYPE html>
<html>
  <head>
    <title>PF</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/ac5873e769.js" crossorigin="anonymous"></script>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand" href="/"><%= image_tag "logo.png", width: "200px" %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <button class="btn btn-default">
                <%= link_to"Cutoって？", homes_about_path, class: 'btn btn-default' %>
              </button>
              <button class="btn btn-default">
                <%= link_to "ToDo作る？", new_user_task_path, class: 'nav-link text-dark' %>
              </button>
              <button class="btn btn-default">
                <%= link_to "疲れたときは…", user_funs_path, class: 'nav-link text-dark' %>
              </button>
              <button class="btn btn-default">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
              </button>
            <% else %>
              <button class="btn btn-default">
                <%= link_to"Cutoって？", homes_about_path, class: 'nav-link text-dark' %>
              </button>
              <button class="btn btn-default">
                <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
              </button>
              <button class="btn btn-default">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
              </button>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
      <%= yield %>
    </main>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset"><%= image_tag "keybord.png", width: "500px" %></div>
        </div>
      </div>
    </footer>
  </body>
</html>
